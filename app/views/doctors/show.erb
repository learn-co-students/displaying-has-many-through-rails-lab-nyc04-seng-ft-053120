<h1><%= @doctor.name %></h1>

<h3><%= @doctor.department %></h3>

<h4>Appointments:</h4>
<% @doctor.appointments.each do |appointment| %>
  <%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %> | 
  <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
  <br>
<% end %>