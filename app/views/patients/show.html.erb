<h1><%= @patient.name %></h1>

<% @patient.appointments.each do |appointment| %>
    <% doctor = @patient.doctors.find(appointment.doctor_id) %>
    <%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(appointment) %> - <%= link_to doctor.name, doctor_path(doctor) %>
    <br>
<% end %>